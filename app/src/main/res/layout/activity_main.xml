<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gifImageView"
        android:layout_width="413dp"
        android:layout_height="737dp"
        android:scaleType="fitXY"
        android:src="@drawable/fuji"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="188dp"
        android:layout_height="170dp"
        android:layout_marginTop="192dp"
        android:text="Finder"
        android:textColor="?android:attr/colorPrimaryDark"
        android:textSize="60dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.739"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/gifImageView" />

    <Button
        android:id="@+id/login"
        android:layout_width="111dp"
        android:layout_height="51dp"
        android:layout_marginStart="108dp"
        android:layout_marginBottom="32dp"
        android:alpha="0.5"
        android:backgroundTint="@color/colorTextIcon"
        android:text="@string/res_login"
        android:textColor="@color/blackTextColor"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/signUp" />

    <Button
        android:id="@+id/signUp"
        android:layout_width="111dp"
        android:layout_height="51dp"
        android:layout_marginEnd="264dp"
        android:layout_marginBottom="32dp"
        android:alpha="0.5"
        android:backgroundTint="@color/colorTextIcon"
        android:text="@string/res_signUp"
        android:textColor="@color/blackTextColor"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/noLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:text="@string/res_noLogin"
        android:textColor="@color/colorDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="111dp"
        android:layout_height="76dp"
        android:layout_marginTop="208dp"
        android:text="Wi-"
        android:textColor="?android:attr/colorPrimaryDark"
        android:textSize="44dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.293"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/gifImageView" />

</androidx.constraintlayout.widget.ConstraintLayout>